<meta name="viewport" content="width=device-width, initial-scale=1.0">

<div class="container-fluid">

<% @messages.each do |m| %>
    <% if m.sender_id == @user.id %>
        <table class="table">
          <tr>
            <td>
              <%= link_to m.subject, message_path(m) %>
              <% if m.read %>
                  [read by user]
              <% end %>
            </td>
            <td><%= m.recipient_name %></td>
            <td><%= m.created_at %></td>
            <td><%= link_to 'Delete Message', m, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        </table>
    <% end %>
<% end %>

    </div>
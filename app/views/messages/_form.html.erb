<%= form_for @message do |form| %>
    <%= form.label :recipient_id %><br/>
    <%= form.select(:recipient_id, @user_options) %><br/>
    <%= form.label :subject %><br/>
    <%= form.text_field :subject %><br/>
    <%= form.label :body %><br/>
    <%= form.text_area :body %><br/>
    <%= form.submit 'Send message' %>
<% end %>
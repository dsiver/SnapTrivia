<div class="container">
  <%= link_to game_game_path(:player2_id => @user.id, :game_id => 0), id: 'cont-btn', title: 'Play New Game' do %>
      Play <%= @user.name %>
  <% end %>
  <h4>Your statistics compared to <%= @user.name %>'s</h4>
  <table class="table">
    <thead>
    <tr>
      <th>Games</th>
      <th>You</th>
      <th><%= @user.name %></th>
    </tr>
    </thead>
    <tbody>
    <tr>
      <td>Total</td>
      <td><%= @current_user.total_games %></td>
      <td><%= @user.total_games %></td>
    </tr>
    <tr>
      <td>Wins</td>
      <td><%= @current_user.total_wins %></td>
      <td><%= @user.total_wins %></td>
    </tr>
    <tr>
      <td>Losses</td>
      <td><%= @current_user.total_games - @current_user.total_wins %></td>
      <td><%= @user.total_games - @user.total_wins %></td>
    </tr>
    <tr>
      <td>Percentage</td>
      <td><%= GameStat.percentage(@current_user.total_wins, @current_user.total_games) %>%</td>
      <td><%= GameStat.percentage(@user.total_wins, @user.total_games) %>%</td>
    </tr>
    </tbody>
  </table>

  <h4>Categories</h4>
  <% Subject.subjects.each do |subject| %>
      <table class="table">
        <thead>
        <tr>
          <th><%= subject %></th>
          <th>You</th>
          <th><%= @user.name %></th>
        </tr>
        </thead>
        <tbody>
        <tr>
          <td>Total</td>
          <td><%= @current_user.total_by_subject(subject) %></td>
          <td><%= @user.total_by_subject(subject) %></td>
        </tr>
        <tr>
          <td>Correct</td>
          <td><%= @current_user.number_correct_by_subject(subject) %></td>
          <td><%= @user.number_correct_by_subject(subject) %></td>
        </tr>
        <tr>
          <td>Percentage</td>
          <td><%= GameStat.percentage(@current_user.number_correct_by_subject(subject), @current_user.total_by_subject(subject)) %>
            %
          </td>
          <td><%= GameStat.percentage(@user.number_correct_by_subject(subject), @user.total_by_subject(subject)) %>%
          </td>
        </tr>
        </tbody>
      </table>
  <% end %>
  <h4>Achievements</h4>
  <h5>Yours</h5>
  <table class="table">
    <thead>
    <tr>
      <th>Trophy</th>
      <th>Description</th>
    </tr>
    </thead>
    <tbody>
    <% @current_user.badges.each do |current_user_badge| %>
        <tr>
          <td><i class="<%= current_user_badge.custom_fields[:icon] %>"></i></td>
          <td><%= current_user_badge.description %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <h5><%= @user.name %>'s</h5>
  <table class="table">
    <thead>
    <tr>
      <th>Trophy</th>
      <th>Description</th>
    </tr>
    </thead>
    <tbody>
    <% @user.badges.each do |user_badge| %>
        <tr>
          <td><i class="<%= user_badge.custom_fields[:icon] %>"></i></td>
          <td><%= user_badge.description %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>




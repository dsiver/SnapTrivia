                result = "INCORRECT"
                bonus = "false"
                wrongSound.play();
            }
            else {
                result = "CORRECT"
                rightSound.play();
            }
            var url = '/game/question_results?result=' + result + "&subject_title=" + subject + "&game_id=" + game_ID + "&bonus=" + bonus;

<div class="row">

  <div class="col-lg-7">

    <div class="input-group">

        <tr>
          <td>
              <p>
                <%= link_to game_game_path(:id => 0, :game_id => 0, :player2_id => get_random_player(current_user.id).id), class: 'btn btn-primary btn-lg', id: 'cont-btn', title: 'Play Random User' do %>
                    Play Random User
                <% end %>
                <!-- Button for play search for user not linked yet -->
                <button type="button" class="btn btn-primary btn-lg" aria-label="Center Align">Search by player name</button>
              </p>
              <input type="text" class="form-control" placeholder="Search By Players Name">
              <!-- Need to grac name and apply search -->
          </td>
          </tr>

    </div>
  </div>
</div>
</table>

<!-- gets active games for current user and lists onclick not yet set -->
<% active_games = get_user_games_active(current_user.id) %>

<div class="list-group">
  <a href="#" class="list-group-item active">
    <h4>Active Games</h4>
  </a>

    <% active_games.each do |game| %>

        <li class="list-group-item">
            <span class="btn btn-large" style="float: right">
          <% if player_turn?(game, current_user.id) %>

              <%= link_to game_game_path(:game_id => game.id, :player2_id => game.player2_id), class: 'btn btn-primary btn', id: 'cont-btn', title: 'Continue Game' do %>
                  Continue Game
              <% end %>
          <% else %>
              <%= player_turn?(game, current_user.id).inspect %>
                  <%= "Waiting on other player" %>
          <% end %>
          </span>
          <%= "Player 1: " + game.player1.name + "  Player 2: " + game.player2.name %>



        </li>
    <% end %>

</div>


<!-- gets finished games for current user onclick  -->
<% finished_games = get_user_game_history(current_user.id) %>

<div class="list-group">
  <a href="#" class="list-group-item active">
    <h4>Completed Games</h4>
  </a>
  <% finished_games.each do |f| %>
      <a href="#" class="list-group-item"><%= "Player 1: " + f.player1.name + "  Player 2: " + f.player2.name %></a>
  <% end %>
</div>


<!-- Gets a list of all users returns list minus current user  -->
<% @users = get_playable_users(current_user.id) %>

<div class="list-group">
  <a href="#" class="list-group-item active">
    <h4>All Users</h4>
  </a>

    <% @users.each do |player2| %>
        <li class="list-group-item">
        <span class="btn btn-large" style="float: right">
        <%= link_to game_game_path(:player2_id => player2.id, :game_id => 0), class: 'btn btn-primary btn', id: 'cont-btn', title: 'Play New Game' do %>
            Play New Game
        <% end %>
        </span>
          <%= "Player name: " + player2.name + "  ID: " + player2.id.to_s %>
        </li>

    <% end %>

</div>
</body>


